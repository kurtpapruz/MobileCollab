                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="98"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="end"/>
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

